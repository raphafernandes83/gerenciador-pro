// SISTEMA DE TESTE PARA SINCRONIZA√á√ÉO EM TEMPO REAL
// =================================================================

// Fun√ß√£o para testar a sincroniza√ß√£o entre cards
window.testRealTimeSync = function () {
    logger.debug('\nüß™ TESTANDO SINCRONIZA√á√ÉO EM TEMPO REAL...\n');

    // Teste 1: Capital Inicial
    logger.debug('üìù Teste 1: Mudan√ßa no capital inicial');
    const capitalInput = dom.capitalInicial;
    if (capitalInput) {
        capitalInput.value = '15000';
        capitalInput.dispatchEvent(new Event('change', { bubbles: true }));

        setTimeout(() => {
            const sidebarCapital = dom.sidebarCapitalInicial;
            if (sidebarCapital) {
                logger.debug(`‚úÖ Capital sincronizado: ${sidebarCapital.value}`);
            } else {
                logger.debug('‚ö†Ô∏è Sidebar n√£o est√° aberto para teste');
            }
        }, 200);
    }

    // Teste 2: Entrada Inicial
    setTimeout(() => {
        logger.debug('üìù Teste 2: Mudan√ßa na entrada inicial');
        const entradaInput = dom.percentualEntrada;
        if (entradaInput) {
            entradaInput.value = '3.5';
            entradaInput.dispatchEvent(new Event('change', { bubbles: true }));
            logger.debug('‚úÖ Entrada alterada para 3.5%');
        }
    }, 300);

    // Teste 3: Payout
    setTimeout(() => {
        logger.debug('üìù Teste 3: Mudan√ßa de payout');
        const payoutBtn = Array.from(document.querySelectorAll('.payout-buttons button')).find(
            (btn) => btn.textContent.trim() === '90'
        );
        if (payoutBtn) {
            payoutBtn.click();
            logger.debug('‚úÖ Payout 90% selecionado');
        }
    }, 600);

    // Teste 4: Estrat√©gia
    setTimeout(() => {
        logger.debug('üìù Teste 4: Mudan√ßa de estrat√©gia');
        const strategySelect = dom.estrategiaSelect;
        if (strategySelect) {
            strategySelect.value = 'fixa';
            strategySelect.dispatchEvent(new Event('change', { bubbles: true }));
            logger.debug('‚úÖ Estrat√©gia alterada para M√£o Fixa');
        }
    }, 900);

    // Teste 5: Stop Win
    setTimeout(() => {
        logger.debug('üìù Teste 5: Mudan√ßa no Stop Win');
        const stopWinInput = dom.stopWinPerc;
        if (stopWinInput) {
            stopWinInput.value = '12';
            stopWinInput.dispatchEvent(new Event('change', { bubbles: true }));
            logger.debug('‚úÖ Stop Win alterado para 12%');
        }
    }, 1200);

    // Teste 6: Stop Loss
    setTimeout(() => {
        logger.debug('üìù Teste 6: Mudan√ßa no Stop Loss');
        const stopLossInput = dom.stopLossPerc;
        if (stopLossInput) {
            stopLossInput.value = '18';
            stopLossInput.dispatchEvent(new Event('change', { bubbles: true }));
            logger.debug('‚úÖ Stop Loss alterado para 18%');
        }

        // Resumo final
        setTimeout(() => {
            logger.debug('\nüéØ TESTE CONCLU√çDO!');
            logger.debug('üìã Para testar sincroniza√ß√£o do sidebar:');
            logger.debug('1. Abra o menu lateral (bot√£o ‚ò∞)');
            logger.debug('2. Clique em "Par√¢metros e Controles"');
            logger.debug('3. Altere valores e veja a sincroniza√ß√£o autom√°tica');
            logger.debug('4. Note que N√ÉO h√° bot√£o "Aplicar" - tudo √© autom√°tico!');
            logger.debug('\nüí° Execute: testRealTimeSync() no console para testar novamente');
        }, 500);
    }, 1500);
};

// =================================================================
// SISTEMA DE TESTE PARA SINCRONIZA√á√ÉO DE PAYOUT + VISUAL FOCUS
// =================================================================
window.testPayoutAndFocus = function () {
    logger.debug('\nüß™ TESTANDO PAYOUT SYNC + VISUAL FOCUS...\n');

    let testIndex = 0;
    const tests = [
        // Teste 1: Payout Sync Main ‚Üí Sidebar
        () => {
            logger.debug('üìù Teste 1: Payout 90% no card principal');
            const btn = Array.from(document.querySelectorAll('.payout-buttons button')).find(
                (b) => b.textContent.trim() === '90'
            );
            if (btn) {
                btn.click();
                logger.debug('‚úÖ Clique executado no payout 90%');
            } else {
                logger.debug('‚ùå Bot√£o payout 90% n√£o encontrado');
            }
        },

        // Teste 2: Verificar sincroniza√ß√£o no sidebar
        () => {
            logger.debug('üìù Teste 2: Verificando sincroniza√ß√£o no sidebar');
            const sidebarBtn = dom.sidebarPayout - 90;
            if (sidebarBtn && sidebarBtn.classList.contains('active-payout')) {
                logger.debug('‚úÖ Sidebar sincronizado corretamente');
            } else if (!sidebarBtn) {
                logger.debug('‚ö†Ô∏è Sidebar n√£o est√° aberto - abra o menu lateral primeiro');
            } else {
                logger.debug('‚ùå Sidebar N√ÉO sincronizado');
            }
        },

        // Teste 3: Focus Effect (Verde Elegante)
        () => {
            logger.debug('üìù Teste 3: Efeito de focus verde elegante no capital inicial');
            const capitalField = dom.capitalInicial;
            if (capitalField) {
                capitalField.focus();
                setTimeout(() => {
                    const computedStyle = window.getComputedStyle(capitalField);
                    const borderColor = computedStyle.borderColor;
                    const boxShadow = computedStyle.boxShadow;

                    // Verifica se tem verde elegante (76, 175, 80)
                    const hasCorrectGreen =
                        borderColor.includes('76, 175, 80') || boxShadow.includes('76, 175, 80');

                    // Verifica se N√ÉO tem cores indesejadas (amarelo/dourado)
                    const hasUnwantedColors =
                        borderColor.includes('230, 118') ||
                        boxShadow.includes('230, 118') ||
                        borderColor.includes('255, 255, 0') ||
                        boxShadow.includes('255, 193');

                    if (hasCorrectGreen && !hasUnwantedColors) {
                        logger.debug('‚úÖ Efeito verde ELEGANTE aplicado corretamente');
                    } else if (hasUnwantedColors) {
                        logger.debug('‚ùå AINDA tem cores indesejadas (amarelo/dourado)');
                        logger.debug('üîç Border:', borderColor);
                        logger.debug('üîç Shadow:', boxShadow);
                    } else {
                        logger.debug('‚ùå Efeito verde N√ÉO aplicado');
                        logger.debug('üîç Border:', borderColor);
                        logger.debug('üîç Shadow:', boxShadow);
                    }
                }, 100);
            } else {
                logger.debug('‚ùå Campo capital inicial n√£o encontrado');
            }
        },

        // Teste 4: Typing Effect
        () => {
            logger.debug('üìù Teste 4: Efeito de digita√ß√£o');
            const capitalField = dom.capitalInicial;
            if (capitalField) {
                capitalField.value = '25000';
                capitalField.dispatchEvent(new Event('input', { bubbles: true }));

                setTimeout(() => {
                    if (capitalField.classList.contains('typing')) {
                        logger.debug('‚úÖ Efeito de digita√ß√£o ativo');
                    } else {
                        logger.debug('üí° Efeito de digita√ß√£o pode ter expirado (normal)');
                    }
                }, 50);
            }
        },

        // Teste 5: Payout Sidebar ‚Üí Main (se sidebar estiver aberto)
        () => {
            logger.debug('üìù Teste 5: Payout 92% no sidebar');
            const sidebarBtn = dom.sidebarPayout - 92;
            if (sidebarBtn) {
                sidebarBtn.click();
                logger.debug('‚úÖ Clique executado no sidebar');

                setTimeout(() => {
                    const mainBtn = Array.from(
                        document.querySelectorAll('.payout-buttons button')
                    ).find((b) => b.textContent.trim() === '92');
                    if (mainBtn && mainBtn.classList.contains('active-payout')) {
                        logger.debug('‚úÖ Card principal sincronizado');
                    } else {
                        logger.debug('‚ùå Card principal N√ÉO sincronizado');
                    }
                }, 100);
            } else {
                logger.debug('‚ö†Ô∏è Bot√£o do sidebar n√£o encontrado - abra o menu lateral');
            }
        },

        // Teste 6: Focus no sidebar (se estiver aberto)
        () => {
            logger.debug('üìù Teste 6: Focus no sidebar');
            const sidebarField = dom.sidebarCapitalInicial;
            if (sidebarField) {
                sidebarField.focus();
                setTimeout(() => {
                    const computedStyle = window.getComputedStyle(sidebarField);
                    const hasGreenBorder =
                        computedStyle.borderColor.includes('230, 118') ||
                        computedStyle.boxShadow.includes('230, 118');
                    if (hasGreenBorder) {
                        logger.debug('‚úÖ Efeito de focus no sidebar funcionando');
                    } else {
                        logger.debug('‚ùå Efeito de focus no sidebar N√ÉO funcionando');
                    }
                }, 100);
            } else {
                logger.debug(
                    '‚ö†Ô∏è Campo do sidebar n√£o encontrado - abra Par√¢metros e Controles no menu lateral'
                );
            }
        },
    ];

    // Executar testes sequencialmente
    function runNextTest() {
        if (testIndex < tests.length) {
            tests[testIndex]();
            testIndex++;
            setTimeout(runNextTest, 800);
        } else {
            logger.debug('\nüéØ TODOS OS TESTES CONCLU√çDOS!');
            logger.debug('üí° Para testar completamente:');
            logger.debug('1. Abra o menu lateral (bot√£o ‚ò∞)');
            logger.debug('2. Clique em "Par√¢metros e Controles"');
            logger.debug('3. Execute novamente: testPayoutAndFocus()');
            logger.debug('4. Teste manualmente clicando nos bot√µes e campos');
        }
    }

    runNextTest();
};

// =================================================================
// TESTE ESPEC√çFICO PARA VALIDA√á√ÉO DO DESAFIO DE BORDAS VERDES
// =================================================================
window.testGreenBorderChallenge = function () {
    logger.debug('\nüéØ TESTE DO DESAFIO: BORDAS VERDES ELEGANTES\n');

    // Teste 1: Verifica√ß√£o Visual Stop Win
    logger.debug('üìù Testando campo Stop Win (%) - o que estava com problema...');
    const stopWinField = dom.stopWinPerc;
    if (stopWinField) {
        stopWinField.focus();

        setTimeout(() => {
            const style = window.getComputedStyle(stopWinField);
            const border = style.borderColor;
            const shadow = style.boxShadow;

            logger.debug('üîç Border atual:', border);
            logger.debug('üîç Shadow atual:', shadow);

            // Verifica verde elegante (76, 175, 80)
            const hasCorrectGreen =
                border.includes('76, 175, 80') || shadow.includes('76, 175, 80');

            // Verifica se N√ÉO tem amarelo/dourado (230, 118 ou outras cores indesejadas)
            const hasYellow = border.includes('230, 118') || shadow.includes('230, 118');
            const hasGold = border.includes('255, 193') || shadow.includes('255, 193');
            const hasUnwantedColors = hasYellow || hasGold;

            if (hasCorrectGreen && !hasUnwantedColors) {
                logger.debug('‚úÖ SUCESSO! Apenas verde elegante, sem amarelo/dourado');
            } else if (hasUnwantedColors) {
                logger.debug('‚ùå FALHA! Ainda tem cores indesejadas');
                if (hasYellow) logger.debug('üü° Detectado: Verde saturado (230, 118)');
                if (hasGold) logger.debug('üü® Detectado: Dourado/Amarelo');
            } else {
                logger.debug('‚ùå FALHA! Verde elegante n√£o aplicado');
            }

            stopWinField.blur();
        }, 200);
    }

    // Teste 2: Todos os campos principais
    setTimeout(() => {
        logger.debug('\nüìù Testando TODOS os campos principais...');
        const fields = [
            'capital-inicial',
            'percentual-entrada',
            'stop-win-perc',
            'stop-loss-perc',
            'estrategia-select',
        ];

        let testsPassed = 0;
        fields.forEach((fieldId, index) => {
            setTimeout(() => {
                const field = document.getElementById(fieldId);
                if (field) {
                    field.focus();

                    setTimeout(() => {
                        const style = window.getComputedStyle(field);
                        const hasGreen =
                            style.borderColor.includes('76, 175, 80') ||
                            style.boxShadow.includes('76, 175, 80');
                        const hasUnwanted =
                            style.borderColor.includes('230, 118') ||
                            style.boxShadow.includes('230, 118');

                        if (hasGreen && !hasUnwanted) {
                            logger.debug(`‚úÖ ${fieldId}: Verde elegante OK`);
                            testsPassed++;
                        } else {
                            logger.debug(`‚ùå ${fieldId}: Problema detectado`);
                        }

                        field.blur();

                        if (index === fields.length - 1) {
                            logger.debug(
                                `\nüéØ RESULTADO: ${testsPassed}/${fields.length} campos corretos`
                            );
                            if (testsPassed === fields.length) {
                                logger.debug('üéâ DESAFIO CONCLU√çDO COM SUCESSO!');
                                logger.debug('‚ú® Todas as bordas s√£o verdes elegantes');
                                logger.debug('üö´ Nenhuma cor indesejada detectada');
                            } else {
                                logger.debug('‚ö†Ô∏è Alguns campos ainda precisam de ajuste');
                            }
                        }
                    }, 100);
                }
            }, index * 300);
        });
    }, 1000);
};

// Executa teste autom√°tico quando a aplica√ß√£o inicializar
document.addEventListener('DOMContentLoaded', () => {
    setTimeout(() => {
        if (window.realTimeSync) {
            logger.debug('‚úÖ Sistema de sincroniza√ß√£o em tempo real ativo');
            logger.debug('üöÄ Executando teste autom√°tico em 2 segundos...');
            setTimeout(() => {
                window.testRealTimeSync();
            }, 2000);
        }

        // Novo teste para payout e focus
        if (window.payoutSync && window.fieldFocusManager) {
            logger.debug('üöÄ Executando testes avan√ßados de payout e focus em 5 segundos...');
            setTimeout(() => {
                window.testPayoutAndFocus();
            }, 5000);
        }
    }, 1000);
});

/**
 * üß™ FUN√á√ÉO DE TESTE - Initialization
 * Testa se todos os sistemas foram inicializados corretamente
 */
function testInitialization() {
    logger.debug('üß™ Testando inicializa√ß√£o do sistema...');

    const startTime = performance.now();
    const results = {
        supabase: false,
        globalObjects: false,
        strategiesRegistered: false,
        tradingManager: false,
        domMapped: false,
        overall: false,
    };

    try {
        // 1. Teste de conex√£o Supabase
        logger.debug('üóÑÔ∏è Testando conex√£o Supabase...');
        try {
            if (typeof supabase !== 'undefined' && supabase) {
                results.supabase = true;
                logger.debug('‚úÖ Supabase: Conectado');
            } else {
                logger.warn('‚ö†Ô∏è Supabase: N√£o conectado');
            }
        } catch (error) {
            logger.warn('‚ö†Ô∏è Supabase:', error.message);
        }

        // 2. Teste de objetos globais
        logger.debug('üåê Testando objetos globais...');
        try {
            const globalObjects = [
                'config',
                'state',
                'logic',
                'ui',
                'dom',
                'charts',
                'sidebar',
                'cssResolver',
            ];

            let foundObjects = 0;
            globalObjects.forEach((obj) => {
                if (typeof window[obj] !== 'undefined') {
                    foundObjects++;
                    logger.debug(`‚úÖ ${obj}: dispon√≠vel`);
                } else {
                    logger.debug(`‚ùå ${obj}: n√£o encontrado`);
                }
            });

            if (foundObjects >= 6) {
                results.globalObjects = true;
                logger.debug(`‚úÖ Objetos globais: ${foundObjects}/${globalObjects.length}`);
            }
        } catch (error) {
            logger.warn('‚ö†Ô∏è Objetos globais:', error.message);
        }

        // 3. Teste de estrat√©gias registradas
        logger.debug('üéØ Testando estrat√©gias...');
        try {
            if (typeof window.registerAdvancedStrategies === 'function') {
                results.strategiesRegistered = true;
                logger.debug('‚úÖ Estrat√©gias: Registradas');
            }
        } catch (error) {
            logger.warn('‚ö†Ô∏è Estrat√©gias:', error.message);
        }

        // 4. Teste de Trading Manager
        logger.debug('üíº Testando Trading Manager...');
        try {
            if (typeof window.tradingManager !== 'undefined' && window.tradingManager) {
                results.tradingManager = true;
                logger.debug('‚úÖ Trading Manager: Ativo');
            } else {
                logger.warn('‚ö†Ô∏è Trading Manager: N√£o encontrado');
            }
        } catch (error) {
            logger.warn('‚ö†Ô∏è Trading Manager:', error.message);
        }

        // 5. Teste de DOM mapeado
        logger.debug('üó∫Ô∏è Testando DOM mapeado...');
        try {
            if (typeof dom !== 'undefined' && Object.keys(dom).length > 10) {
                results.domMapped = true;
                logger.debug(`‚úÖ DOM: ${Object.keys(dom).length} elementos mapeados`);
            } else {
                logger.warn('‚ö†Ô∏è DOM: Poucos elementos mapeados');
            }
        } catch (error) {
            logger.warn('‚ö†Ô∏è DOM:', error.message);
        }

        // Resultado geral
        const successCount = Object.values(results).filter(Boolean).length;
        results.overall = successCount >= 3; // Pelo menos 3 de 5 testes

        const endTime = performance.now();
        logger.debug(`‚è±Ô∏è Testes Initialization executados em ${(endTime - startTime).toFixed(2)}ms`);

        if (results.overall) {
            logger.debug('‚úÖ INITIALIZATION: Sistema inicializado corretamente!');
        } else {
            logger.warn('‚ö†Ô∏è INITIALIZATION: Alguns componentes n√£o inicializados');
        }

        return results;
    } catch (error) {
        logger.error('‚ùå Erro cr√≠tico nos testes Initialization:', error);
        return { ...results, overall: false };
    }
}

// Exposi√ß√£o global
if (typeof window !== 'undefined') {
    window.testInitialization = testInitialization;
    logger.debug('üß™ testInitialization() dispon√≠vel globalmente');
}
