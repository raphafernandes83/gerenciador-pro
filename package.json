{
  "name": "gerenciador-pro",
  "version": "9.5.1",
  "description": "Sistema profissional de gerenciamento e análise de operações de trading com foco em performance, UX moderna e arquitetura escalável",
  "main": "main.js",
  "directories": {
    "doc": "docs",
    "test": "tests"
  },
  "keywords": [
    "trading",
    "gerenciador",
    "analytics",
    "performance",
    "dashboard",
    "chart",
    "statistics",
    "risk-management",
    "monte-carlo",
    "win-rate",
    "profit-factor",
    "drawdown"
  ],
  "author": {
    "name": "Equipe Gerenciador PRO",
    "email": "contato@gerenciadorpro.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/gerenciador-pro/core"
  },
  "bugs": {
    "url": "https://github.com/gerenciador-pro/core/issues"
  },
  "homepage": "https://github.com/gerenciador-pro/core#readme",
  "scripts": {
    "test": "playwright test",
    "test:smoke": "playwright test tests/e2e/smoke.spec.ts",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "lint": "eslint . --fix",
    "lint:fix": "eslint . --fix",
    "lint:check": "eslint .",
    "lint:css": "stylelint \"css/**/*.css\"",
    "lint:css:fix": "stylelint \"css/**/*.css\" --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "echo 'Type checking disabled for legacy JavaScript project'",
    "start": "node server.js",
    "dev": "nodemon server.js",
    "dev:live": "live-server --port=3000 --no-browser",
    "dev:open": "live-server --port=3000",
    "start:test": "http-server -p 3000 -c-1",
    "stylelint": "stylelint \"css/**/*.css\"",
    "prepare": "husky install",
    "check": "npm run lint:check && npm run lint:css && npm run test:smoke",
    "ci": "npm run guard:csp && npm run guard:encoding && npm run guard:theme && npm run lint:check && npm run lint:css && npm run test:smoke && npm run test:critical && npm run test:modals",
    "ci:full": "npm run ci && npm run test:layout && npm run test:visual && npm run test:themes",
    "ci:fix": "npm run lint && npm run format && npm run test",
    "guard:csp": "node scripts/guard-csp.cjs",
    "guard:encoding": "node scripts/guard-encoding.cjs",
    "guard:inline-style": "node scripts/guard-inline-style.cjs",
    "guard:css-order": "node scripts/guard-css-order.cjs",
    "guard:ui-api": "node scripts/guard-ui-api.cjs",
    "guard:selectors": "node scripts/guard-selectors.cjs",
    "guard:all": "npm run guard:csp && npm run guard:encoding && npm run guard:inline-style && npm run guard:theme && npm run guard:theme-scope && npm run guard:css-order && npm run guard:ui-api && npm run guard:selectors",
    "guard:theme": "node scripts/guard-theme-contract.cjs",
    "guard:theme-scope": "node scripts/guard-theme-scope.cjs",
    "test:e2e": "playwright test tests/e2e/",
    "test:critical": "playwright test tests/e2e/critical-flows.spec.ts",
    "test:layout": "playwright test tests/e2e/layout-guards.spec.ts",
    "test:modals": "playwright test tests/e2e/modal-button-contracts.spec.ts",
    "test:visual": "playwright test tests/e2e/visual-regression.spec.ts",
    "test:visual:update": "playwright test tests/e2e/visual-regression.spec.ts --update-snapshots",
    "test:themes": "playwright test tests/e2e/theme-stress.spec.ts",
    "test:invariants": "playwright test tests/e2e/layout-invariants.spec.ts",
    "test:dom": "playwright test tests/e2e/dom-contract.spec.ts",
    "test:settings": "playwright test tests/e2e/settings-schema-contract.spec.ts",
    "test:reset": "playwright test tests/e2e/state-reset.spec.ts",
    "test:warnings": "playwright test tests/e2e/warn-gate.spec.ts",
    "test:tabs": "playwright test tests/e2e/tabs-coverage.spec.ts",
    "test:golden": "playwright test tests/e2e/golden-flows.spec.ts",
    "gate": "npm run guard:all && npm run test:smoke && npm run test:critical",
    "test:prepush": "npm run gate",
    "audit:security": "npm audit --audit-level=high",
    "audit:fix": "npm audit fix",
    "update:check": "ncu",
    "update:deps": "ncu -u && npm install",
    "validate": "npm run ci && echo '✅ Projeto validado com sucesso!'",
    "clean": "npm run lint:fix && npm run lint:css:fix && npm run format",
    "backup": "powershell -File fazer_backup.bat",
    "backup:auto": "echo 'Backup automático - use fazer_backup.bat diretamente'",
    "logs:clear": "powershell -Command \"Remove-Item -Path '.\\\\*.log' -Force -ErrorAction SilentlyContinue\"",
    "cache:clear": "npm cache clean --force",
    "deps:fresh": "npm run cache:clear && rm -rf node_modules && npm install",
    "server": "node server.js",
    "server:dev": "nodemon server.js --watch src --watch *.js",
    "help": "echo 'Scripts disponíveis: dev, test, backup, clean, server'",
    "stats": "echo 'Estatísticas do projeto:' && find . -name '*.js' | wc -l && echo 'arquivos JS'",
    "mojibake:scan": "node tools/mojibake_hunter/mojibake-hunter.cjs --mode=scan",
    "mojibake:test": "node tools/mojibake_hunter/tests/mojibake-hunter.test.cjs",
    "verify": "npm run mojibake:test && npm run mojibake:scan && node --check ui.js && npm run guard:encoding && echo ✅ VERIFY PASSED",
    "qa": "npm run verify && npx playwright test tests/e2e/smoke.spec.ts && echo ✅ QA PASSED"
  },
  "license": "UNLICENSED",
  "private": true,
  "type": "module",
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "concurrently": "^9.2.1",
    "eslint": "^9.33.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "live-server": "^1.2.2",
    "nodemon": "^3.1.11",
    "npm-check-updates": "^19.1.2",
    "playwright": "^1.57.0",
    "prettier": "^3.6.2",
    "stylelint": "^16.23.1",
    "stylelint-config-standard": "^39.0.0",
    "typescript": "^5.9.3"
  },
  "lint-staged": {
    "*.{js,ts,tsx,jsx}": [
      "eslint --fix"
    ],
    "*.{css,scss}": [
      "stylelint --fix"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}
