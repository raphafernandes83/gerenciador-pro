/**
 * ESTADOS DOS INDICADORES
 */
.progress-status-card.excellent {
    /* Padronização visual com o restante do painel: base neutra, acento discreto */
    background: linear-gradient(135deg,
            rgba(var(--panel-color-rgb), 0.6) 0%,
            rgba(var(--panel-color-rgb), 0.4) 100%);
    border-color: var(--border-color);
    box-shadow: var(--shadow-sm);
}

/* Remove a linha/halo verde no estado "excelente" para manter consistência */
.progress-status-card.excellent::before {
    display: none;
}

/* Acento lateral sutil usando a cor primária do tema */
.progress-status-card.excellent::after {
    content: '';
    position: absolute;
    top: 0;
    bottom: 0;
    left: 0;
    width: 3px;
    background: var(--primary-color);
    opacity: 0.6;
}

.progress-status-card.good {
    background: linear-gradient(135deg, rgba(255, 171, 0, 0.1) 0%, rgba(255, 171, 0, 0.05) 100%);
    border-color: var(--accent-color);
}

.progress-status-card.warning {
    background: linear-gradient(135deg, rgba(255, 61, 0, 0.1) 0%, rgba(255, 61, 0, 0.05) 100%);
    border-color: var(--secondary-color);
    animation: warning-pulse 2s ease-in-out infinite;
}

.progress-status-card.neutral {
    background: linear-gradient(135deg,
            rgba(var(--panel-color-rgb), 0.6) 0%,
            rgba(var(--panel-color-rgb), 0.4) 100%);
    /* "Respirar" enquanto aguarda ação do usuário */
    animation: neutral-breathe 2.6s ease-in-out infinite;
}

/**
 * ANIMAÇÕES
 */
@keyframes progress-pulse {

    0%,
    100% {
        opacity: 1;
        transform: scaleX(1);
    }

    50% {
        opacity: 0.7;
        transform: scaleX(0.95);
    }
}

@keyframes warning-pulse {

    0%,
    100% {
        box-shadow: 0 0 20px rgba(255, 61, 0, 0.2);
    }

    50% {
        box-shadow: 0 0 30px rgba(255, 61, 0, 0.4);
    }
}

/* Animação suave de "respirar" para estado neutro (Vamos começar!) */
@keyframes neutral-breathe {

    0%,
    100% {
        transform: translateY(0);
        box-shadow:
            inset 0 0 0 rgba(0, 0, 0, 0),
            0 0 0 rgba(0, 0, 0, 0);
        border-color: var(--border-color);
    }

    50% {
        transform: translateY(-1px);
        box-shadow: inset 0 0 14px rgba(0, 230, 118, 0.06);
        border-color: rgba(0, 230, 118, 0.25);
    }
}